<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:scaleType="fitXY"
        android:layout_margin="3dp"
        android:id="@+id/imageViewSearchBaiHat"
        android:layout_width="80dp"
        android:layout_height="80dp"/>
    <TextView
        android:id="@+id/textViewSearchBaiHat"
        android:textColor="#0a0a0a"
        android:text="Tên bài hát"
        android:layout_toRightOf="@+id/imageViewSearchBaiHat"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textViewSearchCaSi"
        android:textColor="#9c9c9c"
        android:text="Ca sĩ"
        android:layout_toRightOf="@+id/imageViewSearchBaiHat"
        android:layout_below="@id/textViewSearchBaiHat"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/iconlove"
        android:id="@+id/imageViewSearchLuotThich"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

</RelativeLayout>